#! /bin/sh
set -e

# Remove obsolete conffiles

case "$1" in
configure)
    if dpkg --compare-versions "$2" lt-nl "2.24.1"; then
        rm -rf /etc/gnome/config/xrdb
    fi
    if dpkg --compare-versions "$2" lt-nl "2.26.1"; then
        rm -f /etc/xdg/autostart/gnome-settings-daemon.desktop
    fi
esac

